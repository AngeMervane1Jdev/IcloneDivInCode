<p id="notice"><%= notice %></p>

<h1>Feeds</h1>
<div class="caontainer row my-auto mx-auto">
  <% @feeds.each do |feed| %>
  <div class="card">
    <div class="card-head md-3">
      <div class="card m-3"   style="width: 25rem;">
        <%= image_tag feed.image.url class:'card-img-top',size:"100" %>
       </div>
       <div class="card-title">
          <h3 class='text-center text-info'><%= feed.content %></h3>
       </div>
       <div class="card-footer text-center">
        <%= link_to 'Show', feed, class:'btn btn-success text-center fs-3'%>
      
       </div>
    </div>
  </div>       
  

<% end %>
</div>
   

<br>

<%= link_to 'New Feed', new_feed_path %>
